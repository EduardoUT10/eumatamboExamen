<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eumatamboExamen.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="EXAMEN : MOMENTO 1" FontSize="24" HorizontalTextAlignment="Center"/>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Text="USUARIO" Grid.Row="0" Grid.Column="0"/>
                <Label Text="CONTRASEÑA" Grid.Row="1" Grid.Column="0" />

                <Entry x:Name="txtUsuario" Placeholder="Ingrese un Nombre" Grid.Row="0" Grid.Column="1"/>
                <Entry x:Name="txtPassword" Placeholder="Ingrese la Contraseña" Grid.Row="1" Grid.Column="1" IsPassword="True"/>

            </Grid>

            <Button x:Name="btnIniciar" Text="Iniciar Sesiòn" Clicked="btnIniciar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>